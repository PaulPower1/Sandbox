@using PaulsSecurity.Models

@model IEnumerable<PaulsSecurity.Models.Customer>

@{
    ViewBag.Title = "Search results";
    ViewBag.Count = @Model.Count();
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.File_As)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ContactName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Company)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.LastName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.FirstName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.EmailAddress)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.JobTitle)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.BusinessPhone)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.HomePhone)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.MobilePhone)
    </th>
    <th></th>
  </tr>
  @foreach (var item in Model)
  {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.File_As)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.BusinessPhone)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.HomePhone)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.MobilePhone)
        </td>
      </tr>
  }
  <tr>
    Number of Customer Records found : @ViewBag.Count 
  </tr>
</table>
